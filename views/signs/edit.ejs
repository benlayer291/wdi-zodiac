<div class="container">
  <div class="row">
    <div class="offset-by-two eight columns sign-info-img">
      <div class="sign-border-show">
        <img class="sign-logo" src="<%= sign.image %>">
      </div>
    </div>
  </div>
  <div class="row sign-edit">
    <form method="post" action="/signs/<%= sign.id %>">
      <div class="row sign-general">
        <div class="six columns">
          <input type="hidden" name="_method" value="patch">
          <input class="u-full-width" type="text" name="sign[name]" placeholder="Sign Name" value="<%= sign.name %>">
        </div>
        <div class="six columns">
          <input class="u-full-width" type="text" name="sign[period]" placeholder="Sign Period" value="<%= sign.period %>">
        </div>
      </div>
      <div class="row sign-description">
        <div class="twelve columns">
        <textarea class="u-full-width" name="sign[description]" placeholder="<%= sign.description %>"></textarea>
        </div>
      </div>
      <div class="row sign-edit-tools">
        <div class="twelve columns">
          <input type="submit" class="button" value="UPDATE">
        </div>
      </div>
    </form>
  </div>
</div>